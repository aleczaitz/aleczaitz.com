---
import { site } from '../data/site';
---

<footer class="mt-16 border-t border-[rgb(var(--border))]">
	<div class="mx-auto grid max-w-5xl gap-6 px-4 py-10 sm:grid-cols-2">
		<div class="space-y-3">
			<p class="mono text-sm text-[rgb(var(--fg))]">{site.name}</p>
		</div>

		<div class="grid gap-2 sm:justify-end">
			<a class="focus-ring text-sm text-[rgb(var(--muted))] hover:text-[rgb(var(--fg))]" href={`mailto:${site.email}`}>
				{site.email}
			</a>
			<div class="flex flex-wrap gap-3">
				<a
					class="focus-ring text-sm text-[rgb(var(--muted))] hover:text-[rgb(var(--fg))]"
					href={site.github}
					target="_blank"
					rel="noreferrer"
				>
					GitHub
				</a>
				<a
					class="focus-ring text-sm text-[rgb(var(--muted))] hover:text-[rgb(var(--fg))]"
					href={site.linkedin}
					target="_blank"
					rel="noreferrer"
				>
					LinkedIn
				</a>
				<a class="focus-ring text-sm text-[rgb(var(--muted))] hover:text-[rgb(var(--fg))]" href="/resume">
					Resume
				</a>
			</div>
		</div>
	</div>
</footer>


