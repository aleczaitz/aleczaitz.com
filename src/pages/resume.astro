---
import Layout from '../layouts/Layout.astro';
import EducationSection from '../components/EducationSection.astro';
import { education, site } from '../data/site';

const resumeHref = '/AlecZaitzResume.pdf';
---

<Layout
	title={`Resume â€” ${site.name}`}
	description={`Download ${site.name}'s resume as a PDF and get in touch by email.`}
>
	<header class="space-y-3">
		<h1 class="text-3xl font-semibold tracking-tight text-[rgb(var(--fg))]">Resume</h1>
	</header>

	<section class="mt-8 grid gap-4 sm:grid-cols-2">
		<div class="grid-panel p-6">
			<h2 class="mono text-sm font-semibold uppercase tracking-wider text-[rgb(var(--fg))]">
				Download
			</h2>
			<div class="mt-4 flex flex-wrap gap-3">
				<a
					class="focus-ring inline-flex items-center justify-center bg-[rgb(var(--accent))] px-4 py-2 text-sm font-semibold text-white no-underline shadow-sm hover:opacity-95"
					href={resumeHref}
					download
				>
					Download PDF
				</a>
				<a
					class="focus-ring inline-flex items-center justify-center border border-[rgb(var(--border))] bg-[rgb(var(--bg))] px-4 py-2 text-sm font-semibold text-[rgb(var(--fg))] no-underline shadow-sm hover:border-[rgb(var(--accent))]"
					href={`mailto:${site.email}`}
				>
					Email
				</a>
			</div>
			<p class="mt-4 text-sm text-[rgb(var(--muted))]">
				File: <span class="mono">public/AlecZaitzResume.pdf</span>
			</p>
		</div>
	</section>

	<div class="mt-8">
		<EducationSection education={education} />
	</div>
</Layout>


